<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    android:id="@+id/ll_root_layout"
    android:orientation="vertical">

    <com.example.wujianghua.androidscreenshot.screenshot.widget.PaintEditImageView
        android:id="@+id/paintEditImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:layout_marginTop="18dp"
        android:layout_weight="1"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#fff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_withdraw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/operatingbiz_screen_shot_edit_press_selector"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/operatingbiz_screen_shot_icon_back"
            android:gravity="center"
            android:padding="5dp"
            android:text="撤销"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_mosaic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/operatingbiz_screen_shot_edit_btn_selector"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/operatingbiz_screen_shot_icon_mosaic"
            android:gravity="center"
            android:padding="5dp"
            android:text="马赛克"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/operatingbiz_screen_shot_edit_btn_selector"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/operatingbiz_screen_shot_icon_mark"
            android:gravity="center"
            android:padding="5dp"
            android:text="标记"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/operatingbiz_screen_shot_edit_press_selector"
            android:drawablePadding="2dp"
            android:drawableTop="@drawable/operatingbiz_screen_shot_icon_next"
            android:gravity="center"
            android:padding="5dp"
            android:text="下一步"
            android:textSize="12dp"/>
    </LinearLayout>

</LinearLayout>